.customized-input input{height:37px; border:none; float:left; padding:0 5px; color:#7F7FBB; font-weight:400; font-size:13px; width:270px;}
.customized-input, .customized-input div{height:37px; float:left; width: auto;}

.customized-input.input-text .input-left{background:url(../images/input-left.png) left top no-repeat; width:4px;}
.customized-input.input-text input{background:url(../images/input-bg.png) left top repeat-x;}
.customized-input.input-text .input-right{background:url(../images/input-right.png) -1px top no-repeat; width:5px;}

.customized-input.input-text-unactive .input-left{background:url(../images/input-active-left.png) left top no-repeat; width:5px;}
.customized-input.input-text-unactive input{background:url(../images/input-active-bg.png) left top repeat-x;}
.customized-input.input-text-unactive .input-right{background:url(../images/input-active-right.png) left top no-repeat; width:5px;}

.customized-input.input-text-active .input-left{background:url(../images/input-active-left.png) left top no-repeat; width:5px;}
.customized-input.input-text-active input{background:url(../images/input-active-bg.png) left top repeat-x; color:#000066;}
.customized-input.input-text-active .input-right{background:url(../images/input-active-right.png) left top no-repeat; width:5px;}

.customized-input.active-input .input-left{background:url(../images/input-left.png) left top no-repeat; width:4px;}
.customized-input.active-input input{background:url(../images/input-bg.png) left top repeat-x; color:#000066;}
.customized-input.active-input .input-right{background:url(../images/input-right.png) -1px top no-repeat; width:5px;}

.customized-input.input-text-error .input-left{background:url(../images/input-error-left.png) left top no-repeat; width:5px;}
.customized-input.input-text-error input{background:url(../images/input-error-bg.png) left top repeat-x; color:#000066;}
.customized-input.input-text-error .input-right{background:url(../images/input-error-right.png) left top no-repeat; width:5px;}

.customized-input.input-text-error-empty .input-left{background:url(../images/input-error-left.png) left top no-repeat; width:5px; }
.customized-input.input-text-error-empty input{background:url(../images/input-error-bg.png) left top repeat-x;}
.customized-input.input-text-error-empty .input-right{background:url(../images/input-error-right.png) left top no-repeat; width:5px;}
